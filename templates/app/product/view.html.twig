    <div class="container mt-5">

        <div class="row">

            <div class="col-lg-2">
                <div class="list-group">
                    <a href="{{ path('product_list') }}"
                       class="list-group-item {{ (app.request.get('id') == null) ? 'active' : '' }}">
                        {{ 'All Products' | trans }}
                    </a>
                    {% for category in categories %}
                        <a href="{{ path('category_product_list', { id: category.id}) }}"
                           class="list-group-item {{ (product.category.id == category.id) ? 'active' : '' }} {{ (category.products.count == 0) ? 'disabled' : '' }}">
