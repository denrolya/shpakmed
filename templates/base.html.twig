        <meta content="" name="description">

        <!-- Favicons -->
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.png') }}" />
        <link rel="apple-touch-icon" href="{{ asset('apple-touch-icon.png') }}" />

