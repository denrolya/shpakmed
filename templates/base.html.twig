                    <i class="fa fa-envelope-o"></i> <a href="mailto:contact@example.com">contact@shpakmed.com</a>
                    <i class="fa fa-phone"></i> +1 5589 55488 55
                </div>
                <div class="social-links float-right">
                </div>
            </div>
        </section>

        <header id="header">
            <div class="container">

                <div id="logo" class="pull-left">
                    <h1><a href="#body" class="scrollto">Shpak<span>Med</span></a></h1>
